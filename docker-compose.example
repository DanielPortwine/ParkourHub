version: '2'
networks:
  laravel:
services:
  php:
    restart: unless-stopped
    container_name: php
    build: ./docker/php
    ports:
      - "9000:9000"
    volumes:
      - .:/var/www:cached
    user: "1000:1000"
    networks:
      - laravel
  nginx:
    restart: unless-stopped
    container_name: nginx
    image: nginx:stable-alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - .:/var/www:cached
      - ./ssl:/etc/ssl:cached
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf
    networks:
      - laravel
    links:
      - php
    depends_on:
      - php
  mysql:
    restart: unless-stopped
    container_name: mysql
    ports:
      - "3306:3306"
    image: mysql:8.0.19
    volumes:
      - ./storage/mysql:/var/lib/mysql
    networks:
      - laravel
    environment:
      - MYSQL_DATABASE=parkourhub
      - MYSQL_USER=parkourhub
      - MYSQL_PASSWORD=
      - MYSQL_ROOT_PASSWORD=
    # note you must run "ALTER USER 'parkourhub' IDENTIFIED WITH mysql_native_password BY '{password}';" as root
  maildev:
    restart: unless-stopped
    container_name: maildev
    image: djfarrelly/maildev
    ports:
      - "1080:80"
    networks:
      - laravel
  redis:
    restart: unless-stopped
    container_name: redis
    image: redis
    ports:
      - "6379:6379"
    networks:
      - laravel
